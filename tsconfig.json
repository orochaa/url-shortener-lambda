{
  "compilerOptions": {
    /* Build */
    "outDir": ".build",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "lib": ["es2022"],
    "sourceMap": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  }
}
